{
    "name": "dooble-server",
    "private": true,
    "packageManager": "pnpm@9.6.0",
    "workspaces": [
      "apps/*",
      "packages/*",
      "modules/*"
    ],
    "scripts": {
      "build": "pnpm -r --filter ./packages/* --filter ./modules/* --filter ./apps/* build",
      "dev": "pnpm --filter api dev",
      "start": "pnpm --filter api start",
      "lint": "eslint --config .eslintrc.json --ext .ts .",
      "typecheck": "tsc -b",
      "clean": "rimraf \"**/dist\""
    },
    "devDependencies": {
      "@types/node": "^20.14.11",
      "eslint": "^9.9.0",
      "@typescript-eslint/eslint-plugin": "^8.0.0",
      "@typescript-eslint/parser": "^8.0.0",
      "rimraf": "^5.0.5",
      "ts-node": "^10.9.2",
      "tsconfig-paths": "^4.2.0",
      "tsx": "^4.16.2",
      "typescript": "^5.5.4"
    }
  }
  
