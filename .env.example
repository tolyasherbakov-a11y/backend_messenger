## Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/app

## Redis
REDIS_URL=redis://localhost:6379/0

## S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=app-bucket
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=1

## Auth
# single secret used across services (>=32 chars)
AUTH_JWT_SECRET=superlongsecretstringatleast32chars________________________________

# Auth audience/issuer (used by modules/auth)
AUTH_JWT_ISS=messenger.api
AUTH_JWT_AUD=messenger.web
AUTH_JWT_ACCESS_TTL=900        # 15 min
AUTH_JWT_REFRESH_TTL=2592000   # 30 days

# Alternative names for config package (if used)
AUTH_JWT_ISSUER=http://localhost:3000/
AUTH_JWT_AUDIENCE=app-api

# Cookie-based refresh (optional)
AUTH_COOKIES=true
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

## ClamAV
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

